.intro-header

	.container

		.row
			.col-lg-12
				.intro-message
					%h1 Urban Dogefitters
					%h3 Wow. Such outfit. Much handsome.
					%hr.intro-divider
					%ul.list-inline.intro-social-buttons
						%li
							%a.btn.btn-default.btn-lg{:href=>"/login"} Sign In

.content-section-a

	.container

		.row
			.col-lg-5.col-sm-6
				%hr.section-heading-spacer
