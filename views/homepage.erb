<img src="<%= @comparison_picture1.url  %>" onclick="votepicture(<%=@comparison_picture1.id%>, <%=@comparison_picture2.id%>)">
<img src="<%= @comparison_picture2.url  %>" onclick="votepicture(<%=@comparison_picture2.id%>, <%=@comparison_picture1.id%>)">




<script>
    function votepicture(upvote_id, downvote_id){
        $.ajax({
            type: "POST",
            url: "/votepicture",
            data: "&upvote=" + upvote_id + "&downvote=" + downvote_id,
            success: function(result){
                console.log(result);
                alert(result);
                window.location.assign("/");
            }
        });
    }
</script>